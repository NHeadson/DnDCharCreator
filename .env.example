# D&D API Configuration
# 5e-bits D&D API (Free, no authentication required)

# API Base URL - 5e-bits API endpoint
VUE_APP_DND_API_BASE_URL=https://www.dnd5eapi.co/api/2014

# API Key (not required for 5e-bits, but kept for other APIs)
# VUE_APP_DND_API_KEY=your-api-key-here

# API Authentication Type (not needed for 5e-bits)

# Firebase Configuration
# Copy these values and add them to your .env file with your actual Firebase config
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
VITE_FIREBASE_APP_ID=your_firebase_app_id_here

# Admin Configuration
# REQUIRED: Set a secure password for admin functions (edit/delete characters)
VITE_ADMIN_PASSWORD=your_secure_admin_password_here

# Access Control Configuration  
# REQUIRED: Set a password for general access to create characters (separate from admin password)
VITE_ACCESS_PASSWORD=your_group_access_password_here
# VUE_APP_DND_API_AUTH_TYPE=bearer
